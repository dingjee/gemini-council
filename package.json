{
  "name": "gemini-council",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun run build.ts",
    "build:firefox": "bun run build.ts --firefox",
    "dev": "bun run --watch build.ts",
    "dev:firefox": "nodemon --watch src --watch public --ext ts,js,json,html,css --exec \"bun run build.ts --firefox\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint:firefox": "web-ext lint --source-dir ./dist_firefox",
    "pack:firefox": "bun run build:firefox && web-ext build --source-dir ./dist_firefox --artifacts-dir ./web-ext-artifacts --overwrite-dest",
    "start:firefox": "web-ext run --source-dir ./dist_firefox --keep-profile-changes --firefox-profile ./firefox-dev-profile"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/chrome": "^0.1.36",
    "@types/node": "^25.2.2",
    "jsdom": "^28.0.0",
    "nodemon": "^3.1.11",
    "vitest": "^4.0.18",
    "web-ext": "^9.2.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "dexie": "^4.3.0",
    "zod": "^4.3.6"
  }
}